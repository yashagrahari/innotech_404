<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/cardappoint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:id="@+id/number"
            android:text="4"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/number"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent visited date:"
                android:textSize="18sp"
                android:textColor="#000"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-07-2019"
                android:textSize="18sp"
                android:id="@+id/vdate"
                android:layout_marginLeft="8dp"
                android:textColor="#000"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next appointment date:"
                android:textSize="18sp"
                android:textColor="#000"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-07-2019"
                android:textSize="18sp"
                android:id="@+id/ndate"
                android:layout_marginLeft="8dp"
                android:textColor="#000"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugar :"
                android:textSize="18sp"
                android:textColor="#000"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:id="@+id/sugar"
                android:textColor="#000"
                android:textSize="18sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thyroid :"
                android:layout_marginLeft="40dp"
                android:textSize="18sp"
                android:textColor="#000"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:id="@+id/thyroid"
                android:textColor="#000"
                android:textSize="18sp"></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Pressure :"
                android:textSize="18sp"
                android:textColor="#000"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:id="@+id/bloodpressure"
                android:textColor="#000"
                android:textSize="18sp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:tint="@color/red"
                    app:srcCompat="@drawable/medicine"
                    android:layout_margin="4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicines"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:id="@+id/medicines"
                    android:textSize="18dp"
                    android:textColor="@color/accent"></TextView>
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"></View>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:tint="@color/red"
                    app:srcCompat="@drawable/height"
                    android:layout_margin="4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Height"
                    android:layout_marginRight="2dp"

                    android:gravity="center"
                    android:textSize="18dp"
                    android:id="@+id/height"
                    android:textColor="#9F7CA4"></TextView>
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"></View>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:tint="@color/red"
                    app:srcCompat="@drawable/dumbbell"
                    android:layout_margin="4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Weight"

                    android:layout_marginLeft="33dp"
                    android:textSize="18dp"
                    android:id="@+id/weight"
                    android:textColor="#EA9324"></TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/allinone"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_margin="10dp"
                tools:ignore="InvalidId"></TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@color/gray"></View>
    </LinearLayout>


</androidx.cardview.widget.CardView>